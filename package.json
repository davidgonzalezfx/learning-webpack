{
  "name": "webpack-4",
  "version": "1.0.0",
  "description": "learning webpack4",
  "main": "index.js",
  "scripts": {
    "build": "webpack --entry ./index.js --output ./bundle.js --mode development",
    "build:local": "webpack --mode production",
    "build:external": "webpack --config ./external/webpack.config.js",
    "build:multi": "webpack --config ./multi-entry-points/webpack.config.js",
    "build:css": "webpack --config ./css-style-loader/webpack.config.js",
    "build:plugin": "webpack --config ./plugins/webpack.config.js",
    "build:dev": "webpack-dev-server --config ./dev-server/webpack.config.js",
    "build:hot": "webpack-dev-server --config ./hot-module/webpack.config.js",
    "build:babel": "webpack-dev-server --config ./babel/webpack.config.js",
    "build:react": "webpack-dev-server --config ./react/webpack.config.js"
  },
  "keywords": [
    "webpack",
    "javascript"
  ],
  "author": "@davidgonzalezfx",
  "license": "MIT",
  "devDependencies": {
    "@babel/core": "7.4.5",
    "@babel/plugin-transform-runtime": "7.4.4",
    "@babel/preset-env": "7.4.5",
    "@babel/preset-react": "7.0.0",
    "babel-loader": "8.0.6",
    "css-loader": "2.1.1",
    "html-webpack-plugin": "3.2.0",
    "mini-css-extract-plugin": "0.7.0",
    "style-loader": "0.23.1",
    "webpack": "4.32.2",
    "webpack-cli": "3.3.2",
    "webpack-dev-server": "3.5.1"
  },
  "dependencies": {
    "@babel/runtime": "7.4.5",
    "react": "16.8.6",
    "react-dom": "16.8.6"
  }
}
